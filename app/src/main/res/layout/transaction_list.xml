<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="35dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:elevation="10dp"
        android:outlineAmbientShadowColor="@color/design_default_color_primary_dark"

        >

        <TextView
            android:id="@+id/tvPetugas"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:layout_constraintEnd_toEndOf="@+id/tvDate"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Petugas 1" />

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tvPetugas"
            app:layout_constraintTop_toBottomOf="@+id/tvPetugas"
            tools:text="IN" />

        <TextView
            android:id="@+id/tvItemName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            app:layout_constraintEnd_toEndOf="@+id/tvStatus"
            app:layout_constraintStart_toStartOf="@+id/tvStatus"
            app:layout_constraintTop_toBottomOf="@+id/tvStatus"
            tools:text="Daging" />


        <TextView
            android:id="@+id/tvDate"
            android:layout_width="144dp"
            android:layout_height="17dp"
            android:layout_marginTop="-10dp"
            android:gravity="right"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvPetugas"
            tools:text="2021-22-10" />

        <TextView
            android:id="@+id/statusText"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/tvPetugas"
            app:layout_constraintTop_toTopOf="@+id/tvStatus"
            tools:ignore="MissingConstraints"
            tools:text="Status" />

        <TextView
            android:id="@+id/namaItem"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/tvItemName"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="0dp"
            tools:text="Nama Item" />

        <TextView
            android:id="@+id/jumlahBerat"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/tvWeight"
            app:layout_constraintTop_toBottomOf="@+id/tvItemName"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="0dp"
            tools:text="jumlahBerat" />

        <TextView
            android:id="@+id/hargaPerkilo"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@+id/tvTotalPrice"
            app:layout_constraintTop_toTopOf="@+id/tvPrice"
            tools:ignore="MissingConstraints"
            tools:text="Harga Perkilo" />

        <TextView
            android:id="@+id/totalHarga"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="@+id/tvTotalPrice"
            app:layout_constraintTop_toBottomOf="@+id/tvPrice"
            tools:ignore="MissingConstraints"
            tools:text="Harga Perkilo" />

        <TextView
            android:id="@+id/tvKodeTransaksi"
            android:layout_width="199dp"
            android:layout_height="24dp"
            android:gravity="left"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/tvPetugas"
            tools:ignore="MissingConstraints"
            tools:text="KODE TRANSAKSI" />

        <TextView
            android:id="@+id/tvWeight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            app:layout_constraintEnd_toEndOf="@+id/tvItemName"
            app:layout_constraintStart_toStartOf="@+id/tvItemName"
            app:layout_constraintTop_toBottomOf="@+id/tvItemName"
            tools:text="222.2 KG" />

        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            app:layout_constraintEnd_toEndOf="@+id/tvWeight"
            app:layout_constraintStart_toStartOf="@+id/tvWeight"
            app:layout_constraintTop_toBottomOf="@+id/tvWeight"
            tools:text="1000" />

        <TextView
            android:id="@+id/tvTotalPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@+id/tvPrice"
            app:layout_constraintStart_toStartOf="@+id/tvPrice"
            app:layout_constraintTop_toBottomOf="@+id/tvPrice"
            tools:text="10000000" />

        <TextView
            android:id="@+id/tvCusOrSup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/tvTotalPrice"
            tools:text="Nama Supplier" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>